# Configuration for go
# --------------------------------------------------------------------------- #

export GOPATH=$HOME/lib/go
export PATH=$PATH:$GOPATH/bin
test -d $GOPATH || mkdir -p $GOPATH
# GO 1.5 experimental vendor all the way xD
export GO15VENDOREXPERIMENT=1
